CanvasExample:

<CanvasExample>
    RelativeLayout: # relative Positionierung von Widgets zueinander
        canvas:
            Color:
                rgb: 1, 0.8, 0
            Rectangle:
                pos: self.pos
                size: self.size

            Color:
                rgb: 1, 0, 0
            Rectangle:
                pos: self.x, self.y + self.height / 3
                size: self.width, self.height / 3

            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.x, self.y + 2 * self.height / 3
                size: self.width, self.height / 3